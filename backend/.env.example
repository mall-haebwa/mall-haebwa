# Environment Configuration
ENVIRONMENT=development  # development, staging, production
DEBUG_MODE=true         # true: 상세 에러 메시지 표시, false: 사용자 친화적 메시지만 표시

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=ecommerce_ai

# Redis
REDIS_URL=redis://localhost:6379
REDIS_CONVERSATION_TTL=604800  # 7 days in seconds

# AWS Bedrock
AWS_BEARER_TOKEN_BEDROCK=your_bedrock_token_here
AWS_REGION=ap-northeast-2
AWS_BEDROCK_MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0
MAX_TOOL_ITERATIONS=5  # Tool 실행 최대 반복 횟수 (개발: 10, 프로덕션: 5 권장)

# JWT
JWT_SECRET_KEY=your_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
